@using eShopSolution.ViewModels.Categories
@model CategoryModel
@{
    ViewData["Title"] = "SetCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SetCategory</h1>

<h4>Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetCategory" asp-controller="Product" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.categories.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.categories[i].Name
                        <input type="checkbox" asp-for="categories[i].Selected" />
                        <input type="hidden" asp-for="categories[i].Name" />
                        <input type="hidden" asp-for="categories[i].Id" />
                    </label>
                </div>

            }
            <div class="form-group">
                <input type="submit" value="Lưu lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>