@using eShopSolution.ViewModels.System.Users
@using eShopSolution.ViewModels.Common
@model PagedResult<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LocalScript {
    <script>
        setTimeout(function () {
            $('#successalert').fadeOut('slow');
        }, 2000);
    </script>
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách người dùng</h1>
    <div class="card mb-4">
        <div class="card-header ">
            <div class="col-md-6 mt-3">
                <form asp-action="Index" asp-controller="User" method="get">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <input class="btn btn-outline-secondary" type="submit" value="Tìm kiếm">
                        </div>
                        <input class="form-control col-md-4" type="text" name="Keyword" placeholder="Tên đăng nhập hoặc Số điện thoại" aria-label="" aria-describedby="basic-addon1">
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body">
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Danh sách</li>
                <li class="breadcrumb-item"><a asp-action="Register" asp-controller="User">Tạo mới</a></li>
            </ol>
            <div class="row">
                @if (ViewBag.successalert != null)
                {
                    <div id="successalert" class="alert alert-secondary" role="alert">
                        @ViewBag.successalert
                    </div>
                }
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Họ
                        </th>
                        <th>
                            Tên
                        </th>
                        <th>
                            Tên Đăng Nhập
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { Id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @await Component.InvokeAsync("Paged", new PagedResultBase() { PageIndex = Model.PageIndex, PageSize = Model.PageSize, TotalRecords = Model.TotalRecords })
        </div>
    </div>
</div>